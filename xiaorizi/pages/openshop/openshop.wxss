/* pages/openshop/openshop.wxss */
page{
  background: #f0f0f0
}
.top{
  background: #fff;
  padding: 20px;
  border-bottom: 1px solid #ebebeb;
  padding-bottom: 60px;
}
.bottom{
  padding-top: 1px;
  padding-bottom: 60px;
  display: none;
}
.title_1{
  font-size: 22px;
  font-weight: 600;
  color: #333;
  margin-bottom: 20px;
}
.top text{
  font-size: 14px;
  display: block;
  line-height: 30px;
  color: #666;
}
.title_2{
  font-size: 16px;
  color: #333;
  margin-bottom: 20px;
  margin-top: 20px;
}
.filter{
  padding: 20px 0;
  border-bottom: 1px solid #ebebeb;
  position: relative;
  font-size: 14px;
  color: #333;
}
.picker,.city{
  position: absolute;
  right: 0;
  top: 20px;
}
.picker{
  top:15px;
}
.picker image{
  width: 20px;
  height: 20px;
  position: relative;
  top:4px;
}
.picker text{
  color: #ccc;
}
.city{
  border: none;
  text-align: right;
}
.link{
  color: #999;
  font-size: 14px;
  margin-bottom: 20px;
}
.wish_content{
  background: #333;
  padding: 20px 20px 50px;
  border-radius: 5px;
  margin-bottom: 40px;
  color: #FFF;
  font-size: 14px;
}
.wish_content input,.ways{
  display: inline-block;
  width: 50px;
  border-bottom: 1px solid #999;
  color: #f06060;
  text-align: center;
  margin: 0 5px;
  position: relative;
  top: 2px;
  vertical-align: bottom;
}
.ways image{
    width: 5px;
    height: 5px; 
}
.ways{
  padding-bottom: 3px;
}
.wish_content picker{
  display: inline-block;
}
.wish_content>view{
  color: #999;
  font-size: 14px;
  margin-top: 30px;
}
.link_way{
  margin-bottom: 10px;
  padding: 11px 10px 12px;
  /* border-bottom: 1px solid #ebebeb; */
  background: #F5F5F5;
  position: relative;
  padding-left: 70px;
  border-radius: 5px;
}
.link_way .label{
  /* display: inline-block; */
  color: #333;
  font-size: 14px;
  margin-right: 15px;
  vertical-align: middle;
  position: absolute;
  left: 10px;
  top: 12px;
}
.link_way input{
  /* float: right; */
  font-size: 14px;
  color: #333;
  position: relative;
   vertical-align: middle;
   text-align: right;
  width: 100%;
}

.footer{
  position: fixed;
  width: 100%;
  bottom: 0;
  left: 0;
  background: #FFF;
  padding: 5px 15px 15px;
  display: flex;
  justify-content: space-between;
  z-index: 999;
}
.footer view{
  width: 38%;
  height: 45px;
  line-height: 45px;
  text-align: center;
  color: #666;
  font-size: 16px;
  border: 1px solid #b2b2b2;
  border-radius: 5px;
}
.footer .post{
  border: none;
  background: -webkit-linear-gradient(left bottom, #FF6C58, #FF965C);
  color: #fff;
  width: 60%;
  
  border-radius: 5px;
  /* margin-top: 20px; */
}

.cyj{
  background: #FFF;
  padding: 20px 30px;
  height: 100vh;
}
.cyj image{
  width: 20px;
  height: 20px;
}
.cyj .title_1{
    margin: 30px 0;
}
.cyj text{
  display: block;
  line-height: 28px;
  color: #333;
  font-size: 14px;
}

.success{
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0,0,0,.5);
  z-index: 999;
  width: 100%;
  height: 100%;

}
.dialog{
  width: 90%;
  height: 250px;
  background: #fff;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
  border-radius: 5px;
  text-align: center;
  font-size: 14px;
  color: #666;
  padding: 45px 20px;
  line-height: 20px;
  
}
.dialog view{
  margin-top: 15px;
}
.dialog text{
  font-size: 18px;
  color: #333;
}
.dialog image{
  width: 15px;
  height: 15px;
  position:absolute;
  right: 10px;
  top: 10px;
}

.line{
  border-top: 1px solid #E6E6E6;
  margin: 30px 0;
}
.item{
    position: relative;
    padding: 10px;
    background: #F5F5F5;
    border-radius: 5px;
    padding-left: 60px;
    margin-bottom: 15px;
}
.item image{
  position: absolute;
  width: 40px;
  height: 40px;
  left: 10px;
  top: 10px;
}
.item view{
  color: #666;
  font-size: 14px;
  line-height: 25px;
}
.item .title_text{
  font-size: 15px;
  color: #333;
}