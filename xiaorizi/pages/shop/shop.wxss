page{
  background: #f5f5f5;
}
.page{
  height: 100vh;
}
.banner{
  width: 100%;
}
.after{
  position: relative;
}
.after:after{
    content: '';
    position: absolute;
    left: 0;
    bottom: 0;
    right: auto;
    top: auto;
    height: 1px;
    width: 100%;
    background-color: #cacaca;
    display: block;
    z-index: 15;
    -webkit-transform-origin: 50% 100%;
    transform-origin: 50% 100%;
    transform: scaleY(0.33);
}
.info{
  background: #fff;
  padding: 10px;
}
.info text{
  display: block;
}
.name{
