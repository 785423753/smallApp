/**index.wxss**/

.ticket{
  position: relative;
  display: block;
}
.nr{
  padding: 60rpx 50rpx;
}
.bg{
  position: absolute;
  width: 100%;
  height: 100%; 
  top: 0;
  left: 0;
}
.ticket view{
  position: relative;
  z-index: 99;
}
.ticket image{
  display: block;
  width: 100%;
}
.tkt{
  border-top: 1px dashed #888888;
  padding-top: 10px;
  margin-top: 10px;
}
.name{
  color: #3C3C3C;
  font-size: 32rpx;
}
.price{
  float: right;
  color: #F95C36;
  font-size: 34rpx;
  position: relative;
  top: -3px;
}
.price text{
  font-size: 24rpx;
}
.time{
  color: #7C7E7E;
  font-size: 24rpx;
  margin: 5px 0;
}