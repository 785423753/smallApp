/* pages/wish/wish.wxss */
page{
 background: #FFFFFF;
}
.wish{
  padding: 0 15px 60px;
}
.wish image{
    display: block;
    margin: 40px auto 20px;
}
.wish text{
  display: block;
  color: #666;
  line-height: 28px;
  font-size: 14px;
  text-align: center;
}
.title{
  width: 90px;
  line-height: 40px;
  margin: 50px auto;
  color: #333;
  font-size: 16px;
  text-align: center;
  border-top: 1px solid #ccc;
  border-bottom: 1px solid #ccc;
}
.wish_content{
   background: #fff; 
  padding: 20px;
  border-radius: 5px;
  margin-bottom: 40px;
  position: relative;
  overflow: hidden;
  background: url(https://pic.huodongjia.com/static/images/banner@2x.jpg) no-repeat;
  height: 242px;
  background-size: 100% 100%;
}
