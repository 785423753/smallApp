/**index.wxss**/
.main{
  padding: 0 10px ;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  height: 91vh;
  background: #fff;
}
/* 导航 */
.scroll-view_H{
  white-space: nowrap;
  padding: 0 5px;
  box-sizing: border-box;
  background: #fff;
}
.scroll-view-item_H{
  display: inline-block;
  padding: 0 10px;
  line-height: 39px;
  color: #000;
  font-size: 14px;
}
.scroll-view_H .active{
  color: orangered;
  border-bottom: 1px solid orangered;
}
.vip{
  margin: 10px 0 0;
  width: 100%;
}
/* 导航 */
/* 筛选 */
.city_filter,.shop_filter,.addr{
  position: relative;
  padding-left:30px;
  margin-bottom: 10px;
  line-height: 25px;
  font-size:14px;
  height: 25px;
}
.addr image{
  width: 25px;
  position: absolute;
  left: 0;
}
.shop_filter,.city_filter{
  padding: 0;
}
.city_filter{
  margin: 0;
  color:#fff;
  box-sizing: border-box;
  display: inline-block;
  width: 60px;
  top: 3px;
}
.shop_filter image,.city_filter image{
   width: 30px; 
  position: absolute;
   top: -2px; 
}
.shop_filter{
  width: 90px;
  margin: 5px auto;
  font-size: 18px;
  font-weight: bold;
}
.city_filter image{
 right: 2px;
}
.city_filter .picker{
  width: 35px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.search{
  background: #000;
  padding: 5px 5px 10px;
  box-sizing: border-box;
}
.search input{
    display: inline-block;
    width: 64%;
    background: #fff;
    position: absolute;
    right: 13%;
    font-size: 12px;
    padding: 0 5px;
    border: none;
    border-radius: 3px;
    height: 30px;
}
.search icon{
  position: absolute;
  right: 14%;
  z-index: 99;
  top: 11px;
}
.cancel{
  font-size: 14px;
  position: absolute;
  right: 10px;
  color: #fff;
  top: 11px;
}
/* 列表 */
.list{
  padding: 10px 0;
  display: block;
}
.list view{
  display: inline-block;
  vertical-align: top;
}
.photo{
  width: 40px;
  height: 40px;
  /* border: 1px solid #333; */
  border-radius: 100%;
  margin-right: 10px;
  overflow: hidden;
  position: relative;
}
.photo image{
  width: 40px;
  height: 40px;
}
.photo text{
  position: absolute;
  font-size: 12px;
  color: #fff;
  /* top: 10px;
  left: 2px; */
  display: block;
  width: 100%;
  line-height: 40px;
  text-align: center;
  z-index: 99;
}
.photo .mb{
  position: absolute;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.3);
  top: 0;
  left: 0;
  border-radius: 100%;
}
.info{
  width: 80%;
  font-size: 14px;
  color: #888;
  position: relative;

}
.info navigator{
  color: #999;
}
.info text{
  display: block;
  margin-bottom: 8px;
}
.info .name{
  font-size: 16px;
  color: #000;
  margin-bottom: 8px;
  padding-right: 30px;
}
.intro,.price{
  color: #666;
}
.intro{
  display: block;
  overflow: hidden;
  max-height: 40px;
}
.distance{
  position: absolute;
  right: 0;
}
.info .vip_shop{
  display: block;
  width: 100px;
  background: #000;
  color: #fff;
  font-size: 12px;
  padding: 3px;
  margin: 10px 0;
  text-align: center;
}
.imgs{
  width: 100%;
}
.imgs view{
    width: 30%;  
    display: inline-block;  
    margin-right: 3%;
    margin-top: 8px;
    height: 60px;
    overflow: hidden;
    background: #f9f9f9;
}
.img image{
   width: 100%; 
   display: block;
   min-height: 100%;
}
.addr{
  padding-left: 20px;
  margin: 10px 0 20px;
  color: #333;
  font-size: 12px;
  line-height: 23px;
}
.addr image{
  width: 20px;
  left: -4px;
}
.handle{
  width: 100%;
  text-align: right;
}
.handle view{
  position: relative;
  padding-left: 25px;
  margin-left: 40px;
  color: #333;
  font-size: 12px;
}
.handle image{
  width: 20px;
  position: absolute;
  left: 0;
}
.loading{
  padding: 10px 0;
  text-align: center;
  font-size: 12px;
  color: #666;
}
.loading image{
  width: 40px;
  height: 40px;
  margin: auto;
}
.refresh{
  text-align: center;
  width: 100px;
  line-height: 30px;
  border: 1px solid #d9d9d9;
  margin: 20px auto;
  font-size: 14px;
}
 .back_top{
  width: 35px;
  height: 35px;
  position: fixed;
  bottom: 15px;
  right: 10px;
  z-index: 999;
} 